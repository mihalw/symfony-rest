{% extends 'base.html.twig' %}

{% block title %}Rider{% endblock %}

{% block body %}
    <h1>Rider</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Rider ID</th>
                <td>{{ rider.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ rider.name }}</td>
            </tr>
            <tr>
                <th>Surname</th>
                <td>{{ rider.surname }}</td>
            </tr>
            <tr>
                <th>Country</th>
                <td>{{ rider.country }}</td>
            </tr>
            <tr>
                <th>Year_of_birth</th>
                <td>{{ rider.yearOfBirth }}</td>
            </tr>
            <tr>
                <th>Team</th>
                <td>{{ rider.team }}</td>
            </tr>
        </tbody>
    </table>

    <br/><a href="{{ path('rider_index') }}">Back to all riders list</a><br/>
    
    <a href="{{ path('rider_edit', {'id': rider.id}) }}">Edit rider info</a>

    {{ include('rider/_delete_form.html.twig') }}
        
{% endblock %}
