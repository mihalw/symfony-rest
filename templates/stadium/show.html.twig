{% extends 'base.html.twig' %}

{% block title %}Stadium{% endblock %}

{% block body %}
    <h1>Stadium</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ stadium.id }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ stadium.address }}</td>
            </tr>
            <tr>
                <th>Number_of_seats</th>
                <td>{{ stadium.numberOfSeats }}</td>
            </tr>
        </tbody>
    </table>

    <br/><a href="{{ path('stadium_index') }}">Back to stadiums list</a><br/>

    <a href="{{ path('stadium_edit', {'id': stadium.id}) }}">Edit stadium info</a>

    {{ include('stadium/_delete_form.html.twig') }}
{% endblock %}
