{% extends 'base.html.twig' %}

{% block title %}Stadium index{% endblock %}

{% block body %}
    <h1>Stadiums</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Stadium ID</th>
                <th>Address</th>
                <th>Seats</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for stadium in stadia %}
            <tr>
                <td>{{ stadium.id }}</td>
                <td>{{ stadium.address }}</td>
                <td>{{ stadium.numberOfSeats }}</td>
                <td>
                    <a href="{{ path('stadium_show', {'id': stadium.id}) }}">Show</a>
                    <a href="{{ path('stadium_edit', {'id': stadium.id}) }}">Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <br/><a href="{{ path('stadium_new') }}">Create new</a><br/>
    <br/><a href="{{ path('rider_index') }}">Go to riders list</a>
    <br/><a href="{{ path('team_index') }}">Go to teams list</a><br/>
    <a href="{{ path('transfer_index') }}">Go to transfers list</a>
{% endblock %}
