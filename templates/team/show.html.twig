{% extends 'base.html.twig' %}

{% block title %}Team{% endblock %}

{% block body %}
    <h1>Team</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ team.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ team.name }}</td>
            </tr>
            <tr>
                <th>Budget</th>
                <td>{{ team.budget }}</td>
            </tr>
            <tr>
                <th>League</th>
                <td>{{ team.league }}</td>
            </tr>
        </tbody>
    </table>

    <br/><a href="{{ path('ridersInTeam_show', {'id': team.id}) }}">Show {{ team.name }} riders</a><br/>
    <a href="{{ path('team_index') }}">Back to teams list</a><br/>
    <a href="{{ path('team_edit', {'id': team.id}) }}">Edit team info</a>

    {{ include('team/_delete_form.html.twig') }}
{% endblock %}
