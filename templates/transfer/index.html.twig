{% extends 'base.html.twig' %}

{% block title %}Transfer index{% endblock %}

{% block body %}
    <h1>Transfers</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Transfer ID</th>
                <th>Rider ID</th>
                <th>Name</th>
                <th>Surname</th>
                <th>From</th>
                <th>To</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for transfer in transfers %}
            <tr>
                <td>{{ transfer.id }}</td>
                <td>{{ transfer.riderId }}</td>
                <td>{{ transfer.riderName }}</td>
                <td>{{ transfer.riderSurname }}</td>
                <td>{{ transfer.fromTeam }}</td>
                <td>{{ transfer.toTeam }}</td>
                <td>
                    <a href="{{ path('transfer_show', {'id': transfer.id}) }}">Show</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">No records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <br/><a href="{{ path('transfer_new') }}">Make new transfer</a><br/>
    <br/><a href="{{ path('rider_index') }}">Go to riders list</a><br/>
    <a href="{{ path('team_index') }}">Go to teams list</a>
    <br/><a href="{{ path('stadium_index') }}">Go to stadiums list</a>
{% endblock %}
