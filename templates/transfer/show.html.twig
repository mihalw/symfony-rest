{% extends 'base.html.twig' %}

{% block title %}Transfer{% endblock %}

{% block body %}
    <h1>Transfer</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Transfer ID</th>
                <td>{{ transfer.id }}</td>
            </tr>
            <tr>
                <th>Rider ID</th>
                <td>{{ transfer.riderId }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ transfer.riderName }}</td>
            </tr>
            <tr>
                <th>Surname</th>
                <td>{{ transfer.riderSurname }}</td>
            </tr>
            <tr>
                <th>From</th>
                <td>{{ transfer.fromTeam }}</td>
            </tr>
            <tr>
                <th>To</th>
                <td>{{ transfer.toTeam }}</td>
            </tr>
            <tr>
                <th>Cost</th>
                <td>{{ transfer.cost }}</td>
            </tr>
        </tbody>
    </table>

    <br/><a href="{{ path('transfer_index') }}">Back to transfers list</a>

{% endblock %}
